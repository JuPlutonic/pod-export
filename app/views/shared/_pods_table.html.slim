- page_num = params[:page_nav] ? params[:page_nav][:page].to_i.pred : 0
div#pods_table
  table border=".5"
    tr
      th №
      th ИНН
      th Наименование организации
      th _
    - elements = elem_retrieval(@page_nav.tpis)
    - elements.each_with_index do |entry, num|
        tr class="#{cycle('odd', 'even')}"
          td= PageNav::RECORDS_PER_PAGE_ON_TARGETED_SITE * page_num + num.succ
          td= tpi_placeholder = @page_nav.tpis[num]
          td= org_placeholder = @page_nav.pod_organizations[num]
          - get_params = { tax_payer_id: @page_nav.tpis[num], organization: @page_nav.pod_organizations[num] }
          - this_path = {}
          - if entry == 'показать данные'
            - this_path = pod_path(@page_nav.tpis[num])
          - else
            - this_path = new_pod_path
          td
            - if tpi_placeholder && org_placeholder
              = button_to entry, this_path, method: :get, params: get_params, remote: false
  p.row.col-md-5
    p
      breadcrumb Навигация #{page_num.succ} из
      breadcrumb<= @page_nav.last_page.succ
